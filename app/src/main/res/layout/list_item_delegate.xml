<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/pickup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/edit"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pickup_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:paddingTop="5dp"
                android:text="City" />


            <TextView
                android:id="@+id/pickup_street_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:text="Street Number" />

            <TextView
                android:id="@+id/pickup_house_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:text="House Number" />


            <TextView
                android:id="@+id/pickup_zip_code_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:text="Zip Code" />

            <TextView
                android:id="@+id/pickup_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:text="Location " />

        </LinearLayout>

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit"
            android:src="@drawable/delete"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/drop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pickup_layout"
        android:layout_marginTop="3dp">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/drop_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:paddingTop="5dp"
                android:text="City" />


            <TextView
                android:id="@+id/drop_street_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:text="Street Number" />

            <TextView
                android:id="@+id/drop_house_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:text="House Number" />


            <TextView
                android:id="@+id/drop_zip_code_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="@android:color/white"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:text="Zip Code" />

            <TextView
                android:id="@+id/drop_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:text="Location " />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>