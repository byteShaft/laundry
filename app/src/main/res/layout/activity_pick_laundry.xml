<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:context="com.byteshaft.laundry.PickLaundryActivity" />

        <ScrollView
            android:layout_below="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/address_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:drawablePadding="9dp"
            android:hint="Address title"
            android:inputType="textPostalAddress"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/house_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/address_title"
            android:layout_marginTop="20dp"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:drawablePadding="9dp"
            android:hint="House Number"
            android:inputType="numberSigned"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/city_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/house_number"
            android:layout_marginTop="20dp"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:drawablePadding="9dp"
            android:hint="City Address"
            android:inputType="textPostalAddress"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@android:color/darker_gray" />


        <EditText
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/city_address"
            android:layout_marginTop="20dp"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:drawablePadding="9dp"
            android:hint="Street Number"
            android:inputType="textPostalAddress"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@android:color/darker_gray" />


        <EditText
            android:id="@+id/zip_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/street"
            android:layout_marginTop="20dp"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:drawablePadding="9dp"
            android:hint="Zip Code"
            android:inputType="number"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@android:color/darker_gray" />
        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
